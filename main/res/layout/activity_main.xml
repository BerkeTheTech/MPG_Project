<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/tarih"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etkinlikAdi"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:autofillHints="@string/etkinlik_ad覺"
        android:ems="10"
        android:hint="@string/etkinlik_ad覺"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etkinlikDetayi"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:autofillHints="@string/etkinlik_detay覺"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/etkinlik_detay覺"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/etkinlikKaydet"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/etkinlik_kaydet" />

    <Button
        android:id="@+id/etkinlikButton"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/etkinlikler" />
</LinearLayout>